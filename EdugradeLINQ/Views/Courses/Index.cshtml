@model IEnumerable<EdugradeLINQ.Models.Course>

@{
    ViewData["Title"] = "Kurser";
}

<h1 class="my-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Skapa ny kurs</a>
</p>
<table class="table table-striped table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-warning btn-sm">Redigera</a>
                    <a asp-action="Details" asp-route-id="@item.CourseId" class="btn btn-info btn-sm">Detaljer</a>
                    <a asp-action="Delete" asp-route-id="@item.CourseId" class="btn btn-danger btn-sm">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>
