@model IEnumerable<EdugradeLINQ.Models.Student>

@{
    ViewData["Title"] = "Alla Studenter";
}

<h1 class="my-4">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Skapa ny student</a>
</p>
<table class="table table-striped table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolClass.ClassName)
            </th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolClass.ClassName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-warning btn-sm">Redigera</a>
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-info btn-sm">Detaljer</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger btn-sm">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>
